<html xmlns="http://www.w3.org/1999/xhtml" xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd">
    <head>
        <title>{{ show.title }} RSS Feed</title><meta http-equiv="Content-Type" content="text/html; charset=utf-8"></head>
    <body>
        <div class="notice">
          This is a podcast RSS Feed generated by <a href="https://frequency.com" target="_new">Frequency</a>. It is solely used to serve podcast apps via the URL.
        </div>
        <div class="container">
            <div class="podcast-header">
                <hgroup>
                    <h1>{{ title }}</h1>
                    {{ description }}
                </hgroup>
                <div class="podcast-image">
                    <a href=""><img src="{{ imagePath }}" title="{{ title }}"></a>
                </div>
            </div>
            {% for episode in episodes %}
                {{ episode }}
                <div class="item">
                    <h2>
                        <a href="{{ link.to.episode.single.public.path }}" target="_blank">{{ episode.title }}</a>
                    </h2>
                    <div class="timestamp">
                        <span>{{ episode.date }}</span> - 
                        <span>{{ episode.time }}</span></div>
                    <p>{{ episode.title}}</p>
                    <div class="audio-container">
                        <audio controls="true" preload="none" src="{{ episode.audioPath }}"></audio>
                    </div>
                </div>
            {% endfor %}
        </div>
    </body>
</html>