{% extends "layouts/layout.njk" %}

{% set title = "My shows" %}

{% block content %}
	{% if isAuthenticated %}

		<a href="/create-show/" class="rounded-md bg-pink-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-pink-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-pink-600">Start a new show</a>

		{% for show in shows %}
			<a href="/show/{{ show._id }}">
				<div class="grid grid-cols-12 py-4">
					<div class="col-span-2">
						<img 
						src="{{ show.imageUrl }}" 
						alt="Cover for the show {{ show.title }}"
    				>
					</div>
					<div class="col-span-10 py-2 px-6">
						<h2 class="text-2xl font-black">
							{{ show.title | safe }}
						</h2>
						<p>{{ show.showDescription }}</p>
						<p>Explicit content? <span class="font-bold">{{ show.explicitContent }}</span></p>
						<p>Category: <span class="font-bold">{{ show.category }}</span></p>
					</div>
				</div>
			</a>
		{% endfor %}

	{% else %}
		<p>You must be logged in to see your shows.</p>
	{% endif %}
{% endblock %}