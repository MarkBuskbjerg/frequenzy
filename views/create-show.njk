{% extends "layout.njk" %}

{% set title = "Create a new show" %}

{% block content %}
	{% if isAuthenticated %}
		<div class="max-w-2xl mx-auto">
			<form method="POST" action="/create-show" enctype="multipart/form-data">
				<div class="space-y-12">
					<div>
						<label for="title" class="block text-sm font-medium leading-6 text-gray-900">Show title</label>
						<div class="mt-2">
							<input id="title" name="title" type="text" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-pink-600 sm:text-sm sm:leading-6">
						</div>
					</div>

					<div class="col-span-full">
						<label for="showDescription" class="block text-sm font-medium leading-6 text-gray-900">Description</label>
						<div class="mt-2">
							<textarea id="showDescription" name="showDescription" required rows="4" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-pink-600 sm:text-sm sm:leading-6"></textarea>
						</div>
						<p class="mt-3 text-sm leading-6 text-gray-600">Write a description for the show.</p>
					</div>

					<div class="col-span-full">
						<label for="cover-photo" class="block text-sm font-medium leading-6 text-gray-900">Upload show thumbnail</label>
						<div class="mt-2 flex justify-center rounded-lg border border-dashed border-gray-900/25 px-6 py-10">
							<div class="text-center">
								<svg class="mx-auto h-12 w-12 text-gray-300" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
									<path fill-rule="evenodd" d="M1.5 6a2.25 2.25 0 012.25-2.25h16.5A2.25 2.25 0 0122.5 6v12a2.25 2.25 0 01-2.25 2.25H3.75A2.25 2.25 0 011.5 18V6zM3 16.06V18c0 .414.336.75.75.75h16.5A.75.75 0 0021 18v-1.94l-2.69-2.689a1.5 1.5 0 00-2.12 0l-.88.879.97.97a.75.75 0 11-1.06 1.06l-5.16-5.159a1.5 1.5 0 00-2.12 0L3 16.061zm10.125-7.81a1.125 1.125 0 112.25 0 1.125 1.125 0 01-2.25 0z" clip-rule="evenodd"/>
								</svg>
								<div class="mt-4 flex text-sm leading-6 text-gray-600">
									<label for="image" class="relative cursor-pointer rounded-md bg-white font-semibold text-pink-600 focus-within:outline-none focus-within:ring-2 focus-within:ring-pink-600 focus-within:ring-offset-2 hover:text-pink-500">
										<span>Upload the image</span>
										<input id="image" name="image" type="file" class="sr-only">
									</label>
									<p class="pl-1">or drag and drop</p>
								</div>
								<p class="text-xs leading-5 text-gray-600">PNG, JPG, GIF up to 10MB</p>
							</div>
						</div>
					</div>
					<div class="mt-10 space-y-10">
						<fieldset>
							<legend class="text-sm font-semibold leading-6 text-gray-900">Explicit Content Warning</legend>
							<div class="mt-6 space-y-4">
								<div class="relative flex gap-x-3">
									<div class="flex h-6 items-center">
										<input id="explicitContent" name="explicitContent" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600">
									</div>
									<div class="text-sm leading-6">
										<label for="explicitContent" class="text-gray-900">The show needs a warning</label>
									</div>
								</div>
							</div>
						</fieldset>
					</div>
					<div>
						<fieldset>
							<legend class="text-sm font-semibold leading-6 text-gray-900">What type of show is it?</legend>
							<p class="mt-1 text-sm leading-6 text-gray-600">[[ Insert a help text here ]]</p>
							<div class="mt-6 space-y-6">
								<div class="flex items-center gap-x-3">
									<input id="episode" name="showType" value="Episode" type="radio" class="h-4 w-4 border-gray-300 text-pink-600 focus:ring-pink-600">
									<label for="episode" class="block text-sm font-medium leading-6 text-gray-900">Episode</label>
								</div>
								<div class="flex items-center gap-x-3">
									<input id="serial" name="showType" value="Serial" type="radio" class="h-4 w-4 border-gray-300 text-pink-600 focus:ring-pink-600">
									<label for="serial" class="block text-sm font-medium leading-6 text-gray-900">Serial</label>
								</div>
							</div>
						</fieldset>
					</div>
					<div class="sm:col-span-3">
						<label for="category" class="block text-sm font-medium leading-6 text-gray-900">Category</label>
						<div class="mt-2">
							<select id="category" name="category" autocomplete="category-name" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-pink-600 sm:max-w-xs sm:text-sm sm:leading-6">
								<option value="">Select a category</option>
								<!-- Loop through the categories array to create option elements -->
								{% for category in categories %}
									<option value="{{ category }}">{{ category }}</option>
								{% endfor %}
							</select>
						</div>
					</div>
					<div class="mt-2">
						<label for="author" class="block text-sm font-medium leading-6 text-gray-900">Author</label>
						<input type="text" id="author" name="author" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-pink-600 sm:text-sm sm:leading-6">
					</div>
					<div class="mt-2">
						<label for="copyright" class="block text-sm font-medium leading-6 text-gray-900">Copyright</label>
						<input type="text" id="copyright" placeholder="e.g. Podcasting.inc 2023" name="copyright" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-pink-600 sm:text-sm sm:leading-6">
					</div>
					<div class="mt-2">
						<label for="keywords" class="block text-sm font-medium leading-6 text-gray-900">Keywords</label>
						<input type="text" id="keyword" placeholder="mental health, fitness, mindfulness" name="keywords" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-pink-600 sm:text-sm sm:leading-6">
					</div>
					<div class="mt-2">
						<label for="website" class="block text-sm font-medium leading-6 text-gray-900">Website</label>
						<input type="text" id="website" placeholder="https://yoursite.com" name="website" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-pink-600 sm:text-sm sm:leading-6">
					</div>
					<div class="sm:col-span-3">
						<label for="language" class="block text-sm font-medium leading-6 text-gray-900">Spoken language</label>
						<div class="mt-2">
							<select id="language" name="language" autocomplete="language-name" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-pink-600 sm:max-w-xs sm:text-sm sm:leading-6">
								<option value="">Select a language</option>
								<!-- Loop through the languages array to create option elements -->
								{% for language in languages %}
									<option value="{{ language }}">{{ language }}</option>
								{% endfor %}
							</select>
						</div>
					</div>
					<div class="sm:col-span-3">
						<label for="publishTimezone" class="block text-sm font-medium leading-6 text-gray-900">Publishing timezone</label>
						<div class="mt-2">
							<select id="publishTimezone" name="publishTimezone" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-pink-600 sm:max-w-xs sm:text-sm sm:leading-6">
								<option value="">Select timezone</option>
								<!-- Loop through the categories array to create option elements -->
								{% for zone in timezones %}
									<option value="{{ zone }}">{{ zone }}</option>
								{% endfor %}
							</select>
						</div>
					</div>

					<div class="mt-2">
						<!-- Not yet saved to database -->
						<label for="showOwner" class="block text-sm font-medium leading-6 text-gray-900">Show owner</label>
						<input type="text" id="showOwner" placeholder="" name="showOwner" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-pink-600 sm:text-sm sm:leading-6">
					</div>
					<div class="mt-2">
						<!-- Not yet saved to database -->
						<label for="showOwnerEmail" class="block text-sm font-medium leading-6 text-gray-900">Show owner email</label>
						<input type="email" id="showOwnerEmail" placeholder="" name="showOwnerEmail" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-pink-600 sm:text-sm sm:leading-6">
					</div>
					<br/>
					<button type="submit" class="flex w-full justify-center rounded-md bg-pink-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-pink-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-pink-600">Create show</button>
				</div>
			</form>
		</div>
	{% endif %}
{% endblock %}