{% extends "layout.njk" %}

{% set title = "Create a new show" %}

{% block content %}
	{% if isAuthenticated %}
		<div class="max-w-2xl mx-auto">
			<form method="POST" action="/create-show" enctype="multipart/form-data">
				<div>
					<label for="title" class="block text-sm font-medium leading-6 text-gray-900">Show title</label>
					<div class="mt-2">
						<input id="title" name="title" type="text" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-pink-600 sm:text-sm sm:leading-6">
					</div>
				</div>
				<div>
					<label for="showDescription" class="block text-sm font-medium leading-6 text-gray-900">Description</label>
					<div class="mt-2">
						<input id="showDescription" name="showDescription" type="textarea" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-pink-600 sm:text-sm sm:leading-6">
					</div>
				</div>
				<div>
					<label for="image" class="block text-sm font-medium leading-6 text-gray-900">Upload show thumbnail</label>
					<div class="mt-2">
						<input 
							class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-pink-600 sm:text-sm sm:leading-6" 
							type="file" id="image" name="image" required>
					</div>
				</div>
				<div>
					<label for="explicitContent" class="block text-sm font-medium leading-6 text-gray-900">Explicit content</label>
					<div class="mt-2">
						<input type="checkbox" id="explicitContent" name="explicitContent" class="">
					</div>
				</div>
				<div>
					<label for="category" class="block text-sm font-medium leading-6 text-gray-900">Category</label>
					<div class="mt-2">
						<select name="category" required>
							<option value="">Select a category</option>
							<!-- Loop through the categories array to create option elements -->
							{% for category in categories %}
								<option value="{{ category }}">{{ category }}</option>
							{% endfor %}
						</select>
					</div>
				</div>
				<br/>
				<button type="submit" class="flex w-full justify-center rounded-md bg-pink-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-pink-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-pink-600">Create show</button>
			</form>
		</div>
	{% endif %}
{% endblock %}