{% extends 'layout.njk' %}

{% import "macros/forminputs.njk" as formMacros %}

{% set title = show.title %}

{% block content %}
    <div class="max-w-2xl mx-auto">
        <form method="POST" action="/save-show/{{ showId }}" enctype="multipart/form-data">
            {{ formMacros.textInput('Show title', 'title', 'title', '', true, show.title) }}
            {{ formMacros.textareaInput('Description', 'showDescription', 'showDescription', 'A show about ...', true, show.showDescription) }}
            <div>
                <label for="image" class="block text-sm font-medium leading-6 text-gray-900">Upload new show thumbnail</label>
                <div class="mt-2">
                    <input 
							class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-pink-600 sm:text-sm sm:leading-6" 
							type="file" id="image" name="image">
                </div>
            </div>
            <div>
                <label for="explicitContent" class="block text-sm font-medium leading-6 text-gray-900">Explicit content</label>
                <div class="mt-2">
                    <input type="checkbox" id="explicitContent" {% if show.explicitContent %}checked{% endif %} name="explicitContent" class="">
                </div>
            </div>
            <div>
                <label for="category" class="block text-sm font-medium leading-6 text-gray-900">Category</label>
                <div class="mt-2">
                    <select id="category" name="category" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-pink-600 sm:text-sm sm:leading-6">
                        <!-- Loop through the categories array to create option elements -->
                        {% for category in categories %}
                            <!-- Check if the current categoryOption matches the show's category -->
                            <option value="{{ category }}" {% if category == show.category %} selected {% endif %}>
                                {{ category }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <br/>
            <button type="submit" class="flex w-full justify-center rounded-md bg-pink-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-pink-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-pink-600">Save changes</button>
        </form>

    {% endblock %}